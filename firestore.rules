rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- User Profiles ---
    // Allow users to read ANY profile (needed for leaderboard/checking wallet existence)
    // Allow write by ANY auth user (Critical for "Balance Migration" from old guest accounts)
    // In a production app with backend, this should be stricter.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- Transactions ---
    // Allow any logged-in user to READ transactions (needed to check if a signature was already used)
    // But only allow them to CREATE transactions for themselves
    match /transactions/{txnId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // --- Withdrawals ---
    // Allow users to request withdrawals
    match /withdrawals/{withdrawalId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // --- Game State (Multiplayer) ---
    // Anyone can read the game state (timer, pools, etc.)
    // Anyone logged in can trigger next round (Serverless logic) or place bets
    match /game_state/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
      
      // Allow bets subcollection
      match /bets/{betId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
    }
  }
}
